<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Ax000000"
        android:textSize="13dp" />

    <RelativeLayout
        android:id="@+id/rlayout_device"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/setting_icon" />

        <TextView
            android:id="@+id/txt_apptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_terminal_type"
            android:layout_alignBottom="@+id/txt_terminal_type"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="6dp"
            android:text="EasyCamera"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_terminal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_margin="10dp"
            android:padding="6dp"
            android:text="EasyCamera"
            android:textColor="#ffffff"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>